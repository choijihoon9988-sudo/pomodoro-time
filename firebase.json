{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "script-src 'self' https://www.gstatic.com/ https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.esm.js; object-src 'none'"
          }
        ]
      }
    ]
  }
}